<% layout ("../layouts/logged_in_layout.ejs") %>
<script type="text/javascript">
    $(function(){
        $("#addAirlineBtn").click(function(){
            $("#"+tb_airline).append()
        });
    });
</script>
<div class="page-header">
    <h2>FAQ</h2>
    <form
        action="/cms/articles/save/<%= cat%>/<%= type%>/<%= template%>"
        method="post"
    >
        <table class="table table-hover table-stripe" id="tb_airline">
            <tr>
                <th>Question</th>
                <th>Answer</th>
                <th></th>
            </tr>
            <%
                for (var ts in content){
                    var data=content[ts];
                    %>
                    <tr>
                        <td style="vertical-align:middle;"><p style="word-wrap:break-word"><%= data.question%></p></td>
                        <td style="vertical-align:middle;"><p style="word-wrap:break-word"><%= data.answer%></p></td>
                        <td style="vertical-align:middle;"><a href="/cms/articles/delete/<%= cat%>/<%= type%>/<%= template%>/<%= ts%>" class="btn btn-danger">Delete</a></td>
                    </tr>
                    <%
                }
            %>
            <tr id="newAirlineForm">
                <td><input class="form-control" type="text" placeholder="Question" name="question"/></td>
                <td><input class="form-control" type="text" placeholder="Answer" name="answer"/></td>
                <td></td>
            </tr>
        </table>
        <button class="btn btn-primary" >Add</button>
    </form>
</div>