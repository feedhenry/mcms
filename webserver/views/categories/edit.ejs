<% layout("../layouts/logged_in_layout") -%>

<form id="category_edit_form"
    action="/cms/categories/<%= category.alias %>/save"
    method="post">
    <div class="form_panel">
        <div class="page-header">
        <h2><%= title %></h2>
    </div>
        <div class="form-group">
    <label for="alias">Alias</label>
    <input class="form-control" name="alias" type="text" required value="<%= (typeof category != 'undefined') ? category.alias : '' %>" />
</div>
<div class="form-group">
    <label for="name">Name</label>
    <input class="form-control" name="name" type="text" required value="<%= (typeof category != 'undefined') ? category.name : '' %>"/>
</div>
<div class="form-group">
    <label for="publish">Publish</label>
    <select name="publish" class="form-control">
        <option value="true" <%= (typeof category != 'undefined' && category.publish === "true") ? 'selected' : '' %>>yes</option>
        <option value="false" <%= (typeof category != 'undefined' && category.publish === "false") ? 'selected' : '' %>>no</option>
    </select>
</div>
<div>
    <input name="version" type="hidden" value="<%= (typeof category != 'undefined') ? category.version : '' %>"/>
</div>
        <div class="form-group">
             <button type="submit" class=" btn btn-primary">Save</button>
        </div>
    </div>
</form>
