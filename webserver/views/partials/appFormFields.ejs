<div class="form-group"> 
    <label for="alias">Alias</label>
    <input class="form-control" name="alias" type="text" required value="<%= (typeof application != 'undefined') ? application.alias : '' %>"/>
</div>
<div class="form-group"> 
    <label for="name">Name</label>
    <input class="form-control" name="name" type="text" required value="<%= (typeof application != 'undefined') ? application.name : '' %>"/>
</div>  
<div id="app_version_field">
    <label for="version">Version</label>
    <input class="form-control" name="version" type="text" disabled value="<%= (typeof application != 'undefined') ? application.version : '' %>"/>
</div>   
<div class="form-group"> 
    <label for="publish">Publish</label>
    <select name="publish" class="form-control">
        <option value="true" <%= (typeof application != 'undefined' && application.publish === "true") ? 'selected' : '' %>>yes</option>
        <option value="false" <%= (typeof application != 'undefined' && application.publish === "false") ? 'selected' : '' %>>no</option>
    </select>
</div>
<div class="form-group"> 
    <input name="version" type="hidden" value="<%= (typeof application != 'undefined') ? application.version : '' %>"/>
</div>
